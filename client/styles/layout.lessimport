div.link-section {
  position: relative;

  div.top {
    .thumbnail {
      &.left {
        float: left;
        width: 130px;
        height: 130px;
      }
      &.top {
        background-color: @action-color;
        background-position: center center;
        background-repeat: no-repeat;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        height: 130px;
      }
    }
    div.link-title {
      font-size: 20px;
      font-weight: bold;
      padding-left: 15px;
      padding-top: 15px;
      padding-right: 20px;
      padding-bottom: 7px;
      line-height: 26px;
      overflow:hidden;

      &.image-on-left {
        display: flex;
        align-items: center;
        float: right;
        padding-top: 0;
        width: calc(100% ~"-" 130px);
        border-bottom: 1px solid @dark-color;
        color: white;
        height: 130px;
      }
    }
  }

  div.link-description {
    font-size: 14px;
    width: 100%;
    overflow: hidden;

    padding-left: 15px;
    padding-right: 15px;
    padding-top: 0px;
    &.image-on-top {
      max-height: 80px;
    }

    &.image-on-left {
      clear: both;
      max-height: 110px;
      padding-top: 15px;
    }
  }

  .bottom {
    padding-top: 13px;
    padding-bottom: 5px;

    padding-right: 10px;
    text-align: right;
    a {
      color: @action-color;
    }
  }
}

