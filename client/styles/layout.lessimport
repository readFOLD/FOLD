html {
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
}

.standard-icon-colors {
  .bg{
    fill: @dark-icon-color;
  }
  .fg{
    fill: @light-icon-color;
  }
  .fg-stroke{
    fill: none;
    stroke: @light-icon-color;
  }
  .active{
    .bg{
      fill: @action-color;
    }
    .remix-icon{
      .bg{
        fill: @action-color;
      }
    }
  }

  .back-arrow{
    .fg{
      fill: @dark-color;
    }
  }
}

.inverted-icon-colors {
  .bg{
    fill:  @light-icon-color;
  }
  .fg{
    fill: @dark-color;
  }
  .fg-stroke{
    fill: none;
    stroke: @dark-color;
  }

  .active{
    .bg{
      fill: @action-color;
    }
    .remix-icon{
      .bg{
        fill: @action-color;
      }
    }
  }
}

.text-align-start{
  text-align: left; // fallback
  text-align: start;
}

.pill-radios{

  display: inline-flex; // this removes the space between the labels. float: left on label also works
  input[type="radio"] {
    display: none;
  }
  label {
    color: @light-text-color;
    font-size:12px;
    font-weight:bold;
    padding:0 15px;
    line-height:32px;
    height: auto;
    display:inline-block;
    text-align:center;
    background-color: @inactive-pill-color;

    -webkit-border-radius: 16px;
    -moz-border-radius: 16px;
    border-radius: 16px;

    &:not(:first-of-type):not(:last-of-type){
      -webkit-border-radius: 0;
      -moz-border-radius: 0;
      border-radius: 0;
    }

    &:first-of-type{
      -webkit-border-top-right-radius: 0;
      -webkit-border-bottom-right-radius: 0;
      -moz-border-radius-topright: 0;
      -moz-border-radius-bottomright: 0;
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    &:last-of-type{
      -webkit-border-top-left-radius: 0;
      -webkit-border-bottom-left-radius: 0;
      -moz-border-radius-topleft: 0;
      -moz-border-radius-bottomleft: 0;
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }

    &.selected{
      background-color: @active-pill-color;
    }
    &:hover {
      background-color: @hover-pill-color;
    }
  }

  input[type="radio"]:checked+label{
    background-color: @active-pill-color;
  }
}

.center-over-parent-div{ // requires parent div to be position relative or absolute
  position: absolute;
  top: 50%;
  left: 50%;
